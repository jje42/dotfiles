addpath() {
	local directory="$1"
  if [[ -e "$directory" ]]; then
    if ! [[ "$PATH" =~ "${directory}:" ]]; then
      PATH="${directory}:$PATH"
    fi
  fi
	export PATH
}

addpath ~/.local/bin
addpath ~/go/bin
addpath /usr/local/go/bin
addpath ~/src/gitlab.com/atgc/atgc/target/deploy/bin
addpath ~/src/github.com/jje42/tso

alias o="less -SR"
