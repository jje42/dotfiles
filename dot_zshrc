bindkey '^ ' autosuggest-accept

docker-list-tags () {
	http "https://hub.docker.com/v2/repositories/$1/tags" | jq -r '.results[].name'
}

vi() {
	if [ -z $@ ]; then
		nvim $(fzf)
	else
		nvim $@
	fi
}

mkcd() {
  mkdir -p -- "$1" && cd -P -- "$1"
}

